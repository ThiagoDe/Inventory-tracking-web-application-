
<%= form_with model: product do |form| %>
    <div>
        <%= form.label :description %>* <br>
        <%= form.text_field :description %> <br>
  

    </div>

    <br>
    <div>
        <%= form.label :price_per_unit %>* <br>
        <%= form.number_field :price,  in: 1.00..200000.00, step: 0.01 %> <br>

    </div>
    <br>
    <div>
        <%= form.label :quantity %>* <br>
        <%= form.number_field :quantity %> <br>
    </div>
    <br>
    <div>
    <%= form.label :chose_warehouse_Location %>* <br>
    <%= form.select :warehouse_id, @warehouses.map { |warehouse| [warehouse.name, warehouse.id]} + ['-- Select Location --'], selected: "-- Select Location --" %>
    </div>
    <br>
    <br>
    <div>
        <%= form.submit :Save %>
  </div>

<% end %>
    <% if flash[:errors] %>
        <ul>
        <% flash[:errors].each do |error| %>
            <p><%= error %></p>
        <% end %>
        </ul>

    <% end %>
    <br>
    <br>
    <button type="">
        <a href="<%= root_url %>">
            Back to Index Page
        </a>
    </button>